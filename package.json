{
    "name": "@effect-ts-app/boilerplate-root",
    "workspaces": {
        "packages": [
            "apps/api",
            "apps/api-api",
            "apps/api-printworker",
            "apps/backend",
            "apps/frontend",
            "apps/frontend-nuxt",
            "e2e",
            "play",
            "packages/*",
            "libs/*"
        ]
    },
    "private": true,
    "scripts": {
        "clean": "ultra -r clean",
        "clean-dist": "ultra -r clean-dist",
        "upgrade": "echo hi",
        "client": "cd packages/client && yarn client",
        "scan": "yarn esw -w --fix apps/api-api/_src/Usecases.ts packages/client/_src/Resources.ts packages/client/_src/Resources/*.ts",
        "autofix": "NODE_OPTIONS=--max-old-space-size=6144 ultra -r autofix",
        "lint": "ultra -r lint",
        "circular:dist": "ultra -r circular:dist",
        "start": "concurrently -k -p \"[{name}]\" -n \"API,Frontend\" -c \"cyan.bold,green.bold,blue.bold\" \"yarn start:api\" \"yarn start:frontend\"",
        "start:api": "cd apps/api && yarn start",
        "start:frontend": "cd apps/frontend && yarn start",
        "dev": "yarn build:e2e && concurrently -k -p \"[{name}]\" -n \"Watch,API,Frontend\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn watch\" \"yarn dev:api\" \"yarn dev:frontend\"",
        "online-dev": "cd apps/frontend && yarn online-dev",
        "dev:api": "cd apps/api && yarn dev",
        "dev:frontend": "cd apps/frontend && yarn dev",
        "build-apps": "cd apps/api && yarn build && cd ../frontend && yarn build",
        "postinstall": "patch-package",
        "test": "ultra -r yarn test",
        "testsuite": "ultra -r yarn testsuite",
        "up": "yarn update && yarn exec-update",
        "update": "ultra -r --root ncu -u --packageFile package.json",
        "exec-update": "yarn && yarn upgrade",
        "build-libs": "cd packages/prelude && yarn build && cd ../types && yarn build && cd ../client && yarn build && cd ../vue && yarn build && cd ../infra && yarn build && cd ../messages && yarn build && cd ../../libs/eslint && yarn build",
        "lint:watch": "ESLINT_TS=1 esw -w --changed --clear --ext ts,tsx",
        "ultra-api": "ultra --concurrency 1 --filter \"apps/api*\" -r",
        "ultra-libs": "ultra --concurrency 1 --filter \"packages/*\" -r",
        "circular-api": "yarn ultra-api circular",
        "circular-libs": "yarn ultra-libs circular",
        "lint-api": "yarn ultra-api lint",
        "lint-libs": "yarn ultra-libs lint",
        "test-api": "yarn ultra-api test:run",
        "test-libs": "yarn ultra-libs test:run",
        "testsuite-api": "yarn ultra-api testsuite",
        "testsuite-libs": "yarn ultra-libs testsuite",
        "testsuite-libs-manual": "cd packages/prelude && yarn testsuite && cd ../types && yarn testsuite && cd ../client && yarn testsuite && cd ../infra && yarn testsuite && cd ../messages && yarn testsuite && cd ../vue && yarn testsuite",
        "build-api": "cd apps/api && yarn build",
        "watch-libs": "yarn build-libs && ultra -r --filter \"packages/*\" watch",
        "build": "NODE_OPTIONS=--max-old-space-size=6144 tsc --build ./tsconfig.all.json",
        "build-prod": "yarn build-libs && yarn build-frontend-prod",
        "build-frontend-prod": "cd apps/frontend && yarn build",
        "build-e2e": "cd apps/api && yarn e2e:build",
        "watch": "yarn build-api || echo build-fail && concurrently -k -p \"[{name}]\" -n \"API,Frontend\" -c \"cyan.bold,green.bold\" \"cd apps/api && yarn build -w\" \"cd apps/frontend && yarn compile -w\""
    },
    "resolutions": {
        "@effect/core": "^0.0.15",
        "@types/node": "~18.11.9",
        "@types/react": "^18.0.25",
        "http-proxy": "https://registry.yarnpkg.com/http-proxy-node16/-/http-proxy-node16-1.0.0.tgz#618ea288281ae2579e6fc1e57ec1fda3f50ca879",
        "typescript": "https://cdn.jsdelivr.net/npm/@tsplus/installer@0.0.156/compiler/typescript.tgz"
    },
    "dependencies": {
        "@swc/helpers": "0.4.12",
        "@types/react": "^18.0.25",
        "cross-env": "^7.0.3",
        "http-proxy": "https://registry.yarnpkg.com/http-proxy-node16/-/http-proxy-node16-1.0.0.tgz#618ea288281ae2579e6fc1e57ec1fda3f50ca879",
        "patch-package": "^6.5.0",
        "postinstall-postinstall": "^2.1.0",
        "ts-lib": "^0.0.5",
        "ts-node": "^10.9.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.19.3",
        "@phaphoso/eslint-plugin-dprint": "^0.5.2",
        "@swc/core": "1.3.14",
        "@swc/register": "^0.1.10",
        "@tsconfig/strictest": "^1.0.2",
        "@tsplus/installer": "0.0.156",
        "@types/lodash": "^4.14.188",
        "@types/node": "~18.11.9",
        "@typescript-eslint/eslint-plugin": "^5.42.1",
        "@typescript-eslint/parser": "^5.42.1",
        "@typescript-eslint/scope-manager": "^5.42.1",
        "babel-plugin-replace-import-extension": "^1.1.3",
        "concurrently": "^7.5.0",
        "dprint": "^0.32.2",
        "enhanced-resolve": "^5.10.0",
        "eslint": "^8.27.0",
        "eslint-import-resolver-typescript": "^3.5.2",
        "eslint-import-resolver-webpack": "^0.13.2",
        "eslint-plugin-codegen": "^0.16.1",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier-vue": "^4.2.0",
        "eslint-plugin-simple-import-sort": "^8.0.0",
        "eslint-plugin-sort-destructure-keys": "^1.4.0",
        "eslint-plugin-unused-imports": "^2.0.0",
        "eslint-watch": "^8.0.0",
        "fast-check": "^3.3.0",
        "history": "^5.3.0",
        "json5": "^2.2.1",
        "lerna": "^6.0.3",
        "madge": "^5.0.1",
        "module-alias": "^2.2.2",
        "nodemon": "^2.0.20",
        "npm-check-updates": "^16.3.18",
        "ts-transform-paths": "^2.0.3",
        "tsc-watch": "^5.0.3",
        "tsconfig-paths": "^4.1.0",
        "typescript": "https://cdn.jsdelivr.net/npm/@tsplus/installer@0.0.156/compiler/typescript.tgz",
        "typescript-transform-paths": "^3.4.4",
        "ultra-runner": "^3.10.5",
        "vitest": "^0.25.1"
    }
}
